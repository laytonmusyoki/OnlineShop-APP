<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/purple"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@drawable/account_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login to continue"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"/>


        <EditText
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="Email"
            android:textColorHint="#000"
            android:drawableLeft="@drawable/icn_email_24"
            android:drawablePadding="10dp"
            android:textColor="#000"
            android:background="@drawable/account_input"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="Password"
            android:textColorHint="#000"
            android:drawableLeft="@drawable/icn_lock_24"
            android:drawablePadding="10dp"
            android:textColor="#000"
            android:background="@drawable/account_input"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/forgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:layout_marginTop="10dp"
            android:textColor="#6F0808"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAlignment="textEnd"/>


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:text="LOGIN"/>

    </LinearLayout>

    <TextView
        android:id="@+id/already"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearlayout"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="17dp"
        android:text="Don't have an account?"/>

    <TextView
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1CE506"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/already"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Register Here"/>

</RelativeLayout>